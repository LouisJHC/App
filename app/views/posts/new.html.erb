   <%= form_for @post do |f| %>
    <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select a category") %>
	<% if @post.errors.any? %>
			<h2>Could not submit due to <%= pluralize(@post.errors.count, "error") %>.</h2>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
	<% end %>
        <p>
            <%= f.label :title %> <br />
            <%= f.text_field :title %> <br />
        </p>
        
        <p>
            <%= f.label :content %> <br />
            <%= f.text_area :content %> <br />
        </p>    
            
        <p>    
            <%= f.label :address %> <br />
            <%= f.text_field :address %> <br />
        </p>
        

        
        <p>
            <%= f.submit "finish registration" %>
        </p>
    <% end %>
</div>

<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="sidebar">
		<div id="logo">
			<%= link_to root_path do %>
				 <%= link_to(image_tag("SFU logo.jpg", :alt =>"home image", :height => 110, :width => 110)) %>
			<% end %>
		</div>

		<ul>
			<li class="category">Delivery King</li>
			<li><%= link_to "Website", root_path %></li>
			<li><%= link_to "Search", search_path %></li>
			<li><%= link_to "About", about_path %></li>
		</ul>
        <% if !user_signed_in? %>
            <p class="sign_in">Admin Login</p>
        <% end %>
    </div>
    
    <div id="main_content">
        <div id="header">
            <% if current_page?(root_path) %>
                <p>All menu</p>
            <% elsif current_page?(about_path) %>
                <p>About</p>
            <% else %>
             <%= link_to "Back to All menues", root_path %>
            <% end %>
            <% if !user_signed_in? %>
                <div class="buttons">
                    <button class="button"><%= link_to "Sign Up", new_user_registration_path %></button>
                </div>
            <% end %>
            <% if user_signed_in? %>
                <div class="buttons">
                        <button class="button"><%= link_to "Register Business", new_post_path %></button>
                        <button class="button">Log Out</button>
                    </div>
            <% end %>
            </div>

    <% flash.each do |name, msg| %>
        <%= content_tag(:div, msg, class: "alert") %>
    <% end %>
    <%= yield %>
    </div>
    
</body>
</html>